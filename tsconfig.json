{
  "compilerOptions": {
    /* ---------- basics ---------- */
    "target": "ES2017",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "moduleResolution": "bundler",

    /* ---------- ergonomics ---------- */
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,

    /* ---------- PATH ALIAS ---------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ---------- Next plugin ---------- */
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
